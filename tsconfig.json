{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./custom-types"
    ]
  },
  "include": ["./custom-types/**/*", "./src/**/*"],
  "exclude": ["node_modules", "server", "**/*.spec.ts"]
}
